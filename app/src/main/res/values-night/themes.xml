<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NMedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black_overlay</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#434343</item>
        <item name="colorSecondaryVariant">#2F2F2F</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorOnSurface">#C3B4B4</item>

        <item name="colorOnBackground">@color/purple_700</item>

        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/black_overlay</item>

        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
    </style>

    <style name="Theme.NMedia.Toolbar.Menu">
        <!-- <item name="colorSurface">@color/black_overlay</item> -->
    </style>
</resources>